{
	"env": {
		"browser": true,
		"es2022": true,
		"node": true
	},
	"extends": [
		"xo",
		"plugin:react/recommended",
		"plugin:prettier/recommended"
	],
	"plugins": [
		"react",
		"import",
		"prettier"
	],
	"overrides": [
		{
			"extends": [
				"xo-typescript"
			],
			"files": [
				"*.ts",
				"*.tsx"
			],
			"rules": {
				"react/react-in-jsx-scope": "off",
				"new-cap": [
					"error",
					{
						"capIsNew": false
					}
				],
				"object-curly-spacing": [
					"error",
					"always"
				],
				"@typescript-eslint/object-curly-spacing": "off",
				"import/order": [
					"error",
					{
						"groups": [
							"builtin",
							"external",
							"internal"
						],
						"newlines-between": "always",
						"alphabetize": {
							"order": "desc",
							"caseInsensitive": true
						}
					}
				]
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {}
}