  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Next.js (Dev)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "args": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Start Next.js (Prod)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "args": [
        "run",
        "start"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      }
    },
  ]
}